<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/nav.ejs') %> 
    <div class="create-patient content">
        <form id="form" name="create-patient" action="/patients" method="POST">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" pattern="[a-zA-Z]{3,}" required>
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" pattern="[a-zA-Z]{3,}" required>
            <label for="Id">id:</label>
            <input type="text" id="Id" name="Id" pattern="[0-9]{9}" required>
            <!-- <textarea id="id" name="id" required></textarea> -->
            <label for="birthDay" id="birthDay" name="birthDay">birthDay:</label>
            <input type="date" name="birthDay" 
                placeholder="dd-mm-yyyy" value=""
                min="1997-01-01" max="2030-12-31" required>
            <label for="phoneNumber">Phone Number:</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" pattern="[0-9]{9,10}" required>
            <label for="mobileNumber">Mobile Number:</label>
            <input type="tel" id="mobileNumber" name="mobileNumber" pattern="[0-9]{9,10}" required>
            <label>City:</label>
            <input type="text" name="city" pattern="[a-zA-Z]+" required>
            <label>Street:</label>
            <input type="text" name="street" pattern="[a-zA-Z]+" required>
            <div class="street error"></div>
            <label>House Number:</label>
            <input type="text" name="houseNumber" pattern="[0-9]+" required>
            <label for="receivingCoronaVaccine" id="receivingCoronaVaccine" name="receivingCoronaVaccine">Date of receipt of vaccination:</label>
            <input type="date" name="receivingCoronaVaccine" 
                placeholder="dd-mm-yyyy" value=""
                min="1997-01-01" max="2030-12-31" >
            <label>Vaccine Manufacturer:</label>
            <input type="text" name="vaccineManufacturer" pattern="[a-zA-Z]+">
            <label>Receiving Positive Result:</label>
            <input type="date" name="receivingPositiveResult" 
                placeholder="dd-mm-yyyy" value=""
                min="1997-01-01" max="2030-12-31" >
            <label>Recovery:</label>
            <input type="date" name="recovery" 
                placeholder="dd-mm-yyyy" value=""
                min="1997-01-01" max="2030-12-31" >
            <button type="submit">Submit</button>
        </form>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
